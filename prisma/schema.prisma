// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// user.model.prisma
model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String 
  email   String   @unique
  password String
  accounts Account[]
}

// account.model.prisma
model Account {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String @db.ObjectId
  imageUrl     String
  nickname     String
  likedMoviesId  String[]
  user         User     @relation(fields: [userId], references: [id])
}

// movie.model.prisma
model Movie {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  categoryId    Int
  movieName     String
  thumbNailUrl  String
  properties    String[]
  match         Int
  minAge        Int
  seriesCount   Int?
  quality       String
  new           Boolean
}

